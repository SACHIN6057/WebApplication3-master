
@model List<WebApplication3.Models.Post>

@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Post Creation  Page";
}


<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/Contacts.css" asp-append-version="true" />


  <style>

   body {
    font-family: Arial, sans-serif;
    background-color: #f0f0f0;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

h1 {
    font-size: 24px;
    margin-bottom: 10px;
}

textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 16px;
    resize: vertical;
}

.post-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 10px;
}

.btn-post {
    background-color: #1da1f2;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
}

.char-count {
    color: #888;
    font-size: 14px;
}



  </style>


</head>

<body>

  <div>
    <form method="post">
            <button asp-action="Index" asp-controller="Post">BACK</button>
        </form>
        
     <div>




 <div class="container">
        <h1>Create a Post</h1>
        <form method="POST">
            <textarea name="Content" id="post_content" placeholder="What's on your mind?" rows="4"></textarea>
            <div class="post-controls">
              <label for="UserName"><b>UserName</b></label>
   <input type="text" value="@HttpContextAccessor?.HttpContext?.Request.Cookies["UserName"]" name="UserName"    readonly>
                <button type="submit" class="btn-post" asp-action="create" asp-controller="Post">Post</button>
                
               
            </div>
        </form>
    </div>

